<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:id="@+id/cardview_card_item"
    android:layout_width = "@dimen/zero_horizontal_margin"
    android:layout_height = "@dimen/zero_vertical_margin"
    android:layout_gravity = "bottom"
    android:layout_marginEnd="@dimen/text_margin_very_small"
    android:layout_marginStart="@dimen/text_margin_very_small"
    app:layout_constraintBottom_toBottomOf = "parent"
    app:layout_constraintLeft_toLeftOf = "parent"
    app:layout_constraintRight_toRightOf = "parent"
    app:layout_constraintTop_toTopOf = "parent"
    app:layout_constraintDimensionRatio = "1:1"
    app:cardBackgroundColor = "@color/colorAccent"
    app:cardCornerRadius = "@dimen/card_recycler_corner_radius"
    app:cardElevation = "@dimen/card_recycler_elevation"
    tools:showIn = "@layout/layout_item_subcategory">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient" />

    <TextView
        style="@style/TextAppearance.AppCompat.Body2"
        android:id="@+id/textview_card_subcategorytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin_small"
        android:layout_gravity="bottom"
        android:textColor="@color/white"
        android:maxLines="2"
        android:ellipsize="end"/>

</android.support.v7.widget.CardView>